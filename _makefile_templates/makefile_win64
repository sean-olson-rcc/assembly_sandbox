define say
	$(info [Windows Makefile Template] $1)
endef

#
REPO_PATH := $(abspath .)
$(call say,REPO_PATH: $(REPO_PATH))

#
YASM_FLAGS := -f win64 -g cv8
LINK_FLAGS := /subsystem:console /entry:main /largeaddressaware:no

#
BIN_NAME := main_w
BIN := ./$(BIN_NAME).exe

#
default:	help
.PHONY: default


help:
	@echo "***** Makefile Menu *****"
	@echo
	@echo "make help          ==> This menu"
	@echo
	@echo "make build         ==> Build the program"
	@echo "make run           ==> Run the program"
	@echo "make debug         ==> Debug the program"
	@echo
	@echo "make clean         ==> Clean the build area"
	@echo
.PHONY: help

#
build:	$(BIN)
.PHONY: build

#
run:	$(BIN)
	$(BIN)
.PHONY: run

#
debug:	build
	gdb $(BIN_NAME).exe
.PHONY: debug

#
clean:
	-rm -f *.o
	-rm -f *.obj
	-rm -f $(BIN)
.PHONY: clean

#
$(BIN):	main_w.obj
	link $(LINK_FLAGS) main_w.obj /out:$(BIN)

#
main_w.obj:	main_w.asm
	yasm $(YASM_FLAGS) main_w.asm -o main_w.obj